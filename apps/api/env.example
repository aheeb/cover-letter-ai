OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini
FIRECRAWL_API_KEY=

# Optional: override template location (default: repo-root ./template.docx)
# TEMPLATE_PATH=../../template.docx

# Dev CORS (comma-separated)
# API_CORS_ORIGINS=http://localhost:3000
#
# Deployed (Railway) should include your Vercel app origins:
API_CORS_ORIGINS=http://localhost:3000,https://cover-letter-ai.vercel.app,https://cover-letter-ai-beta.vercel.app
#
# Optional: allow Vercel preview deploys (e.g. cover-letter-ai-beta-<hash>.vercel.app)
# API_CORS_ORIGIN_REGEX=^https://cover-letter-ai(-beta)?(-[a-z0-9-]+)?\.vercel\.app$

# Optional: fine-tune recipient indent in cm (default derives from template)
# RECIPIENT_ADDRESS_INDENT_CM=9.5

# Timeouts (seconds) for external calls (LLM/Firecrawl)
# REQUEST_TIMEOUT_SECONDS=30

# Limits
# MAX_CV_PDF_BYTES=8000000
# MAX_JOB_TEXT_CHARS=25000

