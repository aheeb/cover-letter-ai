{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "python -m pip install --upgrade pip setuptools build && python -m pip install ."
  },
  "deploy": {
    "startCommand": "sh -lc 'echo \"PORT=$PORT\"; exec /mise/shims/python -m uvicorn app.main:app --host 0.0.0.0 --port \"$PORT\"'",
    "healthcheckPath": "/healthz"
  }
}
